<div class="container">
	<h1 style="text-align: center;">Add Investment Record </h1>
	<div class="form-max-width" style="width:800px; margin:0 auto;">
		<%= form_for(@investment) do |f| %>
		<% if @investment.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@investment.errors.count, "error") %> prohibited this investment from being saved:</h2>

			<ul>
				<% @investment.errors.full_messages.each do |message| %>
				<li>
					<%= message %>
				</li>
				<% end %>
			</ul>
		</div>
		<% end %>


          <form class="form-max-width" action="create">
            <div class="form-group">
              <label class="control-label" for="stockName">Stock Ticker:</label>
              <input required type="text" id="stockName" name="stockName" class="form-control">
            </div>
            <div class="form-group">
              <label class="control-label" for="quantity">Quantity</label>
              <input required type="text" id="quantity" name="quantity" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">
              Create Investment
            </button>
          </form>


		<% end %>
	</div>

</div>



<script>
    $(document).ready(function () {
        $('#stockName').autocomplete({
            serviceUrl: '/indices/hints',
            deferRequestBy: 200
        })


    })
</script>