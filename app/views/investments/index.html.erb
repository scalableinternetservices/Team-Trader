<div class="container">

	<div class="row">

		<div class="col-sm-5 main">
			<h1 class="page-header">Investment Dashboard</h1>

			<div class="container">
				<div class="row">
					<div class="col-md-offset-0 col-lg-5 col-md-5 col-sm-5">
						<div class="panel panel-default">
							<div class="panel-heading">
								Total
							</div>
							<div class="panel-body">
								<%= @total %>
							</div>
						</div>
					</div>
					<div class="col-lg-5 col-md-5 col-sm-5">
						<div class="panel panel-default">
							<div class="panel-heading">
								Profit
							</div>

							<% if @profit  > 0.0 %>
							<p style="color:green">
								<%= @profit %>
							</p>
							<% elsif @profit  == 0.0 %>
							<p style="color:blue">
								<%= @profit %>
							</p>
							<% else %>
							<p style="color:red">
								<%= @profit %>
							</p>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class= "row">

	<div class="col-sm-5 col-md-10  main">

		<div class="table-responsive ">
			<table class="table table-striped table-bordered">
				<thead>

					<tr>
						<th>Stock</th>
						<th>Inv. Price</th>
						<th>Live Price</th>
						<th>Inv. Date</th>
						<th>Quantity</th>
						<th>Overall Gain($)</th>
						<th>Overall Gain(%)</th>
						<th>Total Inv.</th>
						<th>Total Value</th>

					</tr>
				</thead>

				<tbody>
					<% @investments.each do |investment| %>
					<tr>
						<!-- Lets dynamically add the labels red or green here -->
						<td><%= investment.stockName %> (<%= investment.ticker %>)</td>
						<td><%= investment.buyingPrice %></td>
						<td><%= investment.livePrice %></td>
						<td><%= investment.buyingDate  %></td>
						<td><%= investment.quantity  %></td>

						<% if investment.overallGain  > 0.0 %>
						<td class ="success"><%= investment.overallGain  %></td>
						<td class ="success"><%= investment.overallGainPercent  %></td>
						<% elsif investment.overallGain  == 0.0 %>
						<td class ="warning"><%= investment.overallGain  %></td>
						<td class ="warning"><%= investment.overallGainPercent  %></td>
						<% else %>
						<td class ="danger"><%= investment.overallGain  %></td>
						<td class ="danger"><%= investment.overallGainPercent  %></td>
						<% end %>

						<td><%= investment.totalInvestments  %></td>
						<td><%= investment.totalValue  %></td>
					</tr>
					<% end %>

				</tbody>
			</table>
		</div>
		<%= link_to "New Investment", new_investment_path, class: 'btn btn-primary' %>
	</div>

</div>

</div>